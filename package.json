{
	"name": "one-argument-per-line-clang-format",
	"displayName": "Argument Formatter",
	"description": "",
	"publisher": "abrick",
	"version": "0.3.0",
	"engines": {
		"vscode": "^1.58.0"
	},
	"categories": [
		"Formatters"
	],
	"activationEvents": [
		"onLanguage:cpp"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "one-argument-per-line-clang-format.format",
				"title": "One Argument per Line: Format Selection",
				"enablement": "editorLangId == cpp"
			}
		],
		"keybindings": [
			{
				"command": "one-argument-per-line-clang-format.format",
				"key": "ctrl+f1",
				"when": "editorTextFocus"
			}
		],
		"configuration": {
			"title": "Argument Formatter",
			"properties": {
				"one-argument-per-line-clang-format.saveDocument": {
					"type": "boolean",
					"default": true,
					"description": "Save document after string manipulation."
				}
			}
		}
	},
	"repository": "https://github.com/abrick1509/vs-code-clang-format-one-argument-per-line.git",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.58.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	},
	"dependencies": {
		"vsce": "^1.96.1"
	}
}
